<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="35dp"
        android:text="这个阴影可以改变阴影的透明度，可以自己控制阴影的多少，还有控制阴影在x轴和y轴上的偏移量" />

    <comt.leo.picker.moreaboutview.myView.showview.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:sl_cornerRadius="5dp"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_shadowColor="#1b000000"
        app:sl_shadowRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_shadow_about"></RelativeLayout>

    </comt.leo.picker.moreaboutview.myView.showview.ShadowLayout>


    <!-- 调节阴影圆角的属性是sl_cornerRadius
     展示阴影的多少的属性是sl_shadowRadius
     -->
    <comt.leo.picker.moreaboutview.myView.showview.ShadowLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        app:sl_cornerRadius="30dp"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_shadowColor="#1b000000"
        app:sl_shadowRadius="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/default_head" />


    </comt.leo.picker.moreaboutview.myView.showview.ShadowLayout>


</RelativeLayout>